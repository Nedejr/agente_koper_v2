# Configuração do projeto agente_koper_v2

# === OpenAI API ===
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sua_chave_aqui

# === ChromaDB ===
# Pasta onde o banco de dados será persistido
PERSIST_DIR=db

# === Configurações de Processamento ===
# Tamanho de cada chunk de documento (em caracteres)
CHUNK_SIZE=1000
# Sobreposição entre chunks (para manter contexto)
CHUNK_OVERLAP=200

# === Configurações do Modelo ===
# Temperatura do modelo (0.0 = mais determinístico, 1.0 = mais criativo)
TEMPERATURE=0.1
# Número de chunks a recuperar na busca
K_RETRIEVER=6
# Número de chunks antes do reranking
K_BEFORE_RERANK=12
# Máximo de tokens no contexto
MAX_CONTEXT_TOKENS=3000

# === Features Opcionais ===
# Habilitar busca híbrida (semântica + palavra-chave)
ENABLE_HYBRID_SEARCH=False
# Habilitar reranking de resultados
ENABLE_RERANKING=False
# Usar embeddings locais (em vez da OpenAI)
USE_LOCAL_EMBEDDINGS=False
